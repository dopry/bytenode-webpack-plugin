{
  "name": "electron-forge-typescript-webpack-example",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "herberttn"
  },
  "main": ".webpack/main",
  "scripts": {
    "clean": "rimraf .webpack out",
    "lint": "eslint --ext .ts .",
    "make": "npm run clean && electron-forge make",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "start": "npm run clean && electron-forge start"
  },
  "dependencies": {
    "electron-squirrel-startup": "1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.67",
    "@electron-forge/maker-deb": "6.0.0-beta.67",
    "@electron-forge/maker-rpm": "6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "6.0.0-beta.67",
    "@electron-forge/maker-zip": "6.0.0-beta.67",
    "@electron-forge/plugin-webpack": "6.0.0-beta.67",
    "@herberttn/bytenode-webpack-plugin": "2.1.1",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "css-loader": "6.7.1",
    "electron": "21.2.0",
    "eslint": "8.26.0",
    "eslint-plugin-import": "2.26.0",
    "fork-ts-checker-webpack-plugin": "7.2.13",
    "node-loader": "2.0.0",
    "rimraf": "3.0.2",
    "style-loader": "3.3.1",
    "ts-loader": "9.4.1",
    "typescript": "4.8.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_forge_typescript_webpack",
            "description": "electron-forge-typescript-webpack-example"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "config": "webpack.preload.config.js"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  }
}
